<!-- navbar -->
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button id="scrape" method="POST" type="submit" class="btn btn-default"><a href="/scrape">Scrape Articles!</a></button>
            <button id="go-home"><a href="/">Home</a></button>
            <button id="saved-articles"><a href="/saved-articles">Saved Articles</a></button>
        </div>
    </div>
</nav>

<!-- Main container -->
<div class="row">
    <div class="jumbotron text-center">
        <h3>Welcome to the NPR Mongo Scraper</h3>
    </div>
</div>
<div class="container">
    {{#if results}}
        <div class="row">
            {{#each results}}
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-9">
                                    <a href="{{this.url}}"><h3 class="panel-title pull-left">{{this.title}}</h3></a>
                                </div>
                                <div class="col-xs-3">
                                    <form action="/save" method="POST">
                                        <input id="article-title" type="hidden" name="title" value="{{this.title}}">
                                        <input id="article-url" type="hidden" name="url" value={{this.url}}>
                                        <input id="article-blurb" type="hidden" name="blurb" value="{{this.blurb}}">
                                        <button type="submit" class="btn btn-default pull-right btnSave" value="Save">Save This Article</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <p>{{this.blurb}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
