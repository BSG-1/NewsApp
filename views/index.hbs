<!-- navbar -->
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button id="scrape" method="POST" type="submit" class="btn btn-default"><a href="/scrape">Scrape Articles!</a></button>
            <button id="go-home"><a href="/">Home</a></button>
            <button id="saved-articles"><a href="/saved-articles">Saved Articles</a></button>
        </div>
    </div>
</nav>

<!-- Main container -->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron text-center">
                <h3>Welcome to the NPR Mongo Scraper</h3>
            </div>
        </div>
    </div>
    {{# if results}}
        {{#each results}}
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="col-xs-9">
                                <h3 class="panel-title pull-left">{{this.title}}</h3>
                            </div>
                            <div class="col-xs-3">
                                <form action="/save" method="POST">
                                    <input id="article-title" type="hidden" name="title" value="{{this.title}}">
                                    <input id="article-link" type="hidden" name="link" value={{this.url}}>
                                    <button type="submit" class="btn btn-default pull-right">Save This Article</button>
                                </form>
                            </div>
                        </div>
                        <div class="panel-body">
                            <p>{{this.blurb}}</p>
                        </div>
                        <div class="panel-footer"><a href="{{this.link}}">{{this.link}}</a></div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{/if}}
</div>
